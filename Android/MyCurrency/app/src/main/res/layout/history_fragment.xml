<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/start_lf_hbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="#EDEAEA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_name_htxt"
        app:srcCompat="@drawable/left_button_icon" />

    <ImageButton
        android:id="@+id/final_lf_hbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="8dp"
        android:background="#EDEAEA"
        app:layout_constraintEnd_toStartOf="@+id/final_h_txt"
        app:layout_constraintTop_toBottomOf="@+id/final_name_htxt"
        app:srcCompat="@drawable/left_button_icon" />

    <CalendarView
        android:id="@+id/picker_date"
        android:layout_width="307dp"
        android:layout_height="303dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/exchange_rate_btn"
        android:layout_width="143dp"
        android:layout_height="60dp"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="180dp"
        android:text="Exchange rate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/start_name_htxt"
        android:layout_width="134dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/picker_date" />

    <TextView
        android:id="@+id/final_name_htxt"
        android:layout_width="132dp"
        android:layout_height="21dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/picker_date" />

    <TextView
        android:id="@+id/final_h_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:text="TextView"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/final_rg_hbtn"
        app:layout_constraintTop_toBottomOf="@+id/final_name_htxt" />

    <ImageButton
        android:id="@+id/start_rg_hbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="#F6F3F3"
        app:layout_constraintStart_toEndOf="@+id/start_h_txt"
        app:layout_constraintTop_toBottomOf="@+id/start_name_htxt"
        app:srcCompat="@drawable/right_button_icon" />

    <ImageButton
        android:id="@+id/final_rg_hbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="16dp"
        android:background="#F6F3F3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/final_name_htxt"
        app:srcCompat="@drawable/right_button_icon" />

    <TextView
        android:id="@+id/start_h_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/start_lf_hbtn"
        app:layout_constraintTop_toBottomOf="@+id/start_name_htxt" />

</androidx.constraintlayout.widget.ConstraintLayout>