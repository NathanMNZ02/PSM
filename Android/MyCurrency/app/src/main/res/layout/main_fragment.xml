<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="38dp"
    tools:layout_editor_absoluteY="0dp">

    <Button
        android:id="@+id/favourite_btn_colored"
        android:layout_width="66dp"
        android:layout_height="76dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="172dp"
        android:backgroundTint="#00F6F2F2"
        app:icon="@android:drawable/btn_star"
        app:iconPadding="10dp"
        app:iconTint="#E8C41E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/final_lf_ibtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="183dp"
        android:layout_marginEnd="18dp"
        android:background="#EDEAEA"
        app:layout_constraintEnd_toStartOf="@+id/final_txt"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/left_button_icon" />

    <Button
        android:id="@+id/exchange_btn"
        android:layout_width="143dp"
        android:layout_height="60dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="180dp"
        android:text="@string/exchange_btn_content"
        app:icon="@android:drawable/ic_lock_idle_charging"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/favourite_btn_not_colored"
        android:layout_width="66dp"
        android:layout_height="76dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="172dp"
        android:backgroundTint="#00F6F2F2"
        app:icon="@android:drawable/btn_star"
        app:iconPadding="10dp"
        app:iconTint="#DCBABA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/start_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="194dp"
        android:text="TextView"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/start_lf_ibtn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/final_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="194dp"
        android:layout_marginEnd="20dp"
        android:text="TextView"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/final_rg_ibtn"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/start_value"
        android:layout_width="165dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:hint="Insert here"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_txt" />

    <EditText
        android:id="@+id/final_value"
        android:layout_width="165dp"
        android:layout_height="55dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="11dp"
        android:editable="false"
        android:ems="10"
        android:hint="Result here"
        android:inputType="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/final_lf_ibtn" />

    <ImageButton
        android:id="@+id/start_lf_ibtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="183dp"
        android:background="#EDEAEA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/left_button_icon" />

    <ImageButton
        android:id="@+id/start_rg_ibtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="183dp"
        android:background="#23F1E6E6"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/start_txt"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/right_button_icon" />

    <ImageButton
        android:id="@+id/final_rg_ibtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="183dp"
        android:layout_marginEnd="16dp"
        android:background="#23F1E6E6"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/right_button_icon" />

    <TextView
        android:id="@+id/start_name_txt"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="152dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/final_name_txt"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>